                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <Button Width="100" Height="20" Margin="0,80,0,0" Content="remove" FontSize="12" Command="{Binding buttonClick}"
                                CommandParameter="{Binding ElementName=itemCanvas3}"/>
                    </Canvas>

