<UserControl x:Class="NetworkService.Views.NetworkEntitiesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             xmlns:data="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="460"
             >
    <UserControl.DataContext>
        <viewModel:NetworkEntitiesViewModel/>
    </UserControl.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Label>Type:</Label>
                <ComboBox ItemsSource="{Binding parkingTypes}" Width="100" Height="25"/>
                <StackPanel Orientation="Horizontal" Margin="0, 0" VerticalAlignment="Center">
                    <RadioButton Content="&lt;" Margin="10,0,10,0"/>
                    <RadioButton Content="&gt;"/>
                </StackPanel>
                <TextBox Width="100" Height="25" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
                <Button Width="50" Margin="20,0,10,0" Content="Filter" Height="25"/>
            </StackPanel>
            <DataGrid x:Name="parkingDG" ItemsSource="{Binding NetworkEntities}" IsReadOnly="True" AutoGenerateColumns="False" Height="500">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="30" Header="ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Width="*" Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Width="*" Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Width="*" Header="Value" Binding="{Binding EntityValue}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Width="100" Height="30" Content="Refresh" Command="{Binding Refresh}"/>
        </StackPanel>
    </Grid>
</UserControl>
