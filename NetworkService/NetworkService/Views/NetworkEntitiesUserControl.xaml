<UserControl x:Class="NetworkService.Views.NetworkEntitiesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             xmlns:data="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             Height="660" Width="460"
             FontSize="17"
             >
    <UserControl.DataContext>
        <viewModel:NetworkEntitiesViewModel/>
    </UserControl.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Label>Type:</Label>
                <ComboBox ItemsSource="{Binding parkingTypes}" Width="100" Height="25"/>
                <StackPanel Orientation="Horizontal" Margin="0, 0" VerticalAlignment="Center">
                    <RadioButton Content="&lt;" Margin="10,0,10,0"/>
                    <RadioButton Content="&gt;"/>
                </StackPanel>
                <TextBox Width="100" Height="30" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
                <Button Width="50" Margin="20,0,10,0" Content="Filter" Height="25"/>
            </StackPanel>
            <DataGrid x:Name="parkingDG" ItemsSource="{Binding NetworkEntities}" SelectedItem="{Binding selectedEntity}" IsReadOnly="True" AutoGenerateColumns="False" Height="446">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="30" Header="ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Width="*" Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Width="*" Header="Type" Binding="{Binding Type.Parking}"/>
                    <DataGridTextColumn Width="*" Header="Value" Binding="{Binding EntityValue}"/>
                </DataGrid.Columns>

            </DataGrid>
            <StackPanel Orientation="Horizontal" Height="119">
                <StackPanel Orientation="Vertical" Margin="10,0">
                    <TextBox Width="150" Height="30" Margin="5" Text="{Binding newEntity.Id, Mode=TwoWay}"/>
                    <TextBox Width="150" Height="30" Margin="5" Text="{Binding newEntity.Name, Mode=TwoWay}"/>
                    <ComboBox Width="150" ItemsSource="{Binding parkingTypes}" SelectedItem="{Binding newEntity.Type.Parking}" Height="35"/>
                </StackPanel>
                <Image Width="100" Height="100" Source="{Binding newEntity.Type.ImageSource}"/>
            </StackPanel>
            
        </StackPanel>

        <Label Content="ID" Width="150" Height="32" HorizontalContentAlignment="Center" IsHitTestVisible="False" Margin="19,493,291,135"/>
        <Label Content="Name" Width="150" Height="32" HorizontalContentAlignment="Center" IsHitTestVisible="False"  Margin="19,530,291,98"/>
        <Label Content="Type" Width="150" Height="32"  HorizontalContentAlignment="Center" IsHitTestVisible="False"  Margin="19,565,291,52" VerticalContentAlignment="Center"/>

        <Button Width="100" Height="30" Content="Add" Command="{Binding Add}" Margin="337,516,23,114"/>
        <Button Width="100" Height="30" Content="Delete" Command="{Binding Delete}" Margin="337,556,23,74"/>
        <Button Width="100" Height="30" Content="Refresh" Command="{Binding Refresh}" Margin="60,620,300,10"/>
    </Grid>
</UserControl>
