<UserControl x:Class="NetworkService.Views.NetworkGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="460"
             FontSize="17">

    <UserControl.DataContext>
        <viewModel:NetworkGraphViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Rectangle Margin="10" Fill="White"></Rectangle>
        <Line X1="100" Y1="40" X2="100" Y2="550" Stroke="Black" StrokeThickness="5"/>
        <Line X1="100" Y1="550" X2="420" Y2="550" Stroke="Black" StrokeThickness="5"/>
        <Line X1="100" Y1="350" X2="400" Y2="350" Stroke="Black" StrokeThickness="1"/>
        <Line X1="100" Y1="150" X2="400" Y2="150" Stroke="Black" StrokeThickness="1"/>
    </Grid>
</UserControl>
